

#include <iostream>

using namespace std;

int main()
{
    int a,i,sum=0,k,b;
    cout<<"enter a number to find if it is perfect ";
    cin>>a;
    
    k=a;
    
    i=1;
    while(i<a)
    {
        if(a%i==0)
        {
            sum=sum+i;   
        }
        i++;
    }
    
    if(sum==k)
    cout<<"it is perfect";
    
    else
    cout<<"it is not perfect";
    
    return 0;
}
